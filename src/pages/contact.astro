---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import BreadcrumbSchema from "../components/seo/BreadcrumbSchema.astro";
import site from "../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'Contact', url: 'https://www.flyingsma.com/contact/' },
];
---

<BaseLayout title="Contact Us" description="Get in touch with Southern Maine Aviation for flight training, FBO services, or aircraft maintenance.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<!-- Page Header -->
	<section class="bg-gradient-to-br from-blue-900 to-slate-900 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
			<p class="text-xl text-blue-200 max-w-2xl mx-auto">
				We'd love to hear from you! Reach out for flight training, FBO services, or any aviation needs.
			</p>
		</div>
	</section>

	<!-- Contact Section -->
	<ContactSection
		title="Get In Touch"
		description="Ready to start flying with us? That's great! Give us a call or send us an email and we will get back to you soon!"
		variant="split"
		showMap={true}
	/>

	<!-- Contact Form Section -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4 max-w-2xl">
			<div class="text-center mb-10">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Send Us a Message</h2>
				<p class="text-gray-600">
					Fill out the form below and we'll get back to you as soon as possible.
				</p>
			</div>

			<form
				action="https://formspree.io/f/your-form-id"
				method="POST"
				class="space-y-6"
			>
				<div class="grid md:grid-cols-2 gap-6">
					<div>
						<label for="name" class="block text-sm font-medium text-gray-700 mb-2">
							Name <span class="text-red-500">*</span>
						</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
							placeholder="Your name"
						/>
					</div>
					<div>
						<label for="email" class="block text-sm font-medium text-gray-700 mb-2">
							Email <span class="text-red-500">*</span>
						</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
							placeholder="your@email.com"
						/>
					</div>
				</div>

				<div>
					<label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
						Phone
					</label>
					<input
						type="tel"
						id="phone"
						name="phone"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
						placeholder="(207) 555-0123"
					/>
				</div>

				<div>
					<label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
						Subject <span class="text-red-500">*</span>
					</label>
					<select
						id="subject"
						name="subject"
						required
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
					>
						<option value="">Select a topic...</option>
						<option value="flight-training">Flight Training</option>
						<option value="discovery-flight">Discovery Flight</option>
						<option value="scenic-flight">Scenic Flight</option>
						<option value="aircraft-rental">Aircraft Rental</option>
						<option value="corporate-arrivals">Corporate Arrivals</option>
						<option value="maintenance">Aircraft Maintenance</option>
						<option value="fuel">Fuel Services</option>
						<option value="other">Other</option>
					</select>
				</div>

				<div>
					<label for="message" class="block text-sm font-medium text-gray-700 mb-2">
						Message <span class="text-red-500">*</span>
					</label>
					<textarea
						id="message"
						name="message"
						required
						rows="5"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
						placeholder="How can we help you?"
					></textarea>
				</div>

				<div class="text-center">
					<button
						type="submit"
						class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition-all duration-200"
					>
						Send Message
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</button>
				</div>
			</form>
		</div>
	</section>

	<!-- Quick Contact Cards -->
	<section class="py-12 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
				<a href={`tel:${site.contact.flight.phone}`} class="flex items-center p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
						<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
						</svg>
					</div>
					<div>
						<p class="text-sm text-gray-500">Flight Training</p>
						<p class="font-semibold text-gray-900">{site.contact.flight.phone}</p>
					</div>
				</a>

				<a href={`tel:${site.contact.fbo.phone}`} class="flex items-center p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
						<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
						</svg>
					</div>
					<div>
						<p class="text-sm text-gray-500">FBO Desk</p>
						<p class="font-semibold text-gray-900">{site.contact.fbo.phone}</p>
					</div>
				</a>

				<a href={`mailto:${site.contact.fbo.email}`} class="flex items-center p-6 bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-4">
						<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</div>
					<div>
						<p class="text-sm text-gray-500">Email Us</p>
						<p class="font-semibold text-gray-900">{site.contact.fbo.email}</p>
					</div>
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
