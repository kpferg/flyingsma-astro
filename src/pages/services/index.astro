	<script>
		async function loadFuelPrices() {
			const FUEL_API_URL = 'https://cdn.contentful.com/spaces/gf6i9onr9mz0/environments/master/entries/4lhawuLvFfPQRZ9eGC7uiH?access_token=hx8ZbAb984moIf6MxQ_3ZmqvbtEiENQt5tqh_E846EM';

			const loadingEl = document.getElementById('fuel-loading');
			const tableEl = document.getElementById('fuel-table');
			const errorEl = document.getElementById('fuel-error');

			try {
				const response = await fetch(FUEL_API_URL);
				if (!response.ok) throw new Error('Failed to fetch');

				const data = await response.json();
				const fields = data.fields;

				const formatPrice = (price: number | undefined) => {
					if (price === undefined || price === null) return '—';
					return price.toLocaleString('en-US', { style: 'currency', currency: 'USD' });
				};

				// Update prices
				const jetAFull = document.getElementById('jet-a-full');
				const jetASelf = document.getElementById('jet-a-self');
				const avgasFull = document.getElementById('avgas-full');
				const avgasSelf = document.getElementById('avgas-self');
				const mogasSelf = document.getElementById('mogas-self');
				const updatedEl = document.getElementById('fuel-updated');

				if (jetAFull) jetAFull.textContent = formatPrice(fields.jetAFullService);
				if (jetASelf) jetASelf.textContent = formatPrice(fields.jetASelfService);
				if (avgasFull) avgasFull.textContent = formatPrice(fields.avgasFullService);
				if (avgasSelf) avgasSelf.textContent = formatPrice(fields.avgasSelfService);
				if (mogasSelf) mogasSelf.textContent = formatPrice(fields.mogasSelfService);

				if (updatedEl && data.sys?.updatedAt) {
					const date = new Date(data.sys.updatedAt);
					updatedEl.textContent = `Prices updated: ${date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}`;
				}

				// Show table, hide loading
				loadingEl?.classList.add('hidden');
				tableEl?.classList.remove('hidden');
			} catch (error) {
				console.error('Failed to load fuel prices:', error);
				loadingEl?.classList.add('hidden');
				errorEl?.classList.remove('hidden');
			}
		}

		// Load fuel prices when the page loads
		loadFuelPrices();
	</script>

