---
import FBOLayout from "../../layouts/FBOLayout.astro";
import ContactSection from "../../components/sections/ContactSection.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import ServiceSchema from "../../components/seo/ServiceSchema.astro";
import site from "../../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'FBO Services', url: 'https://www.flyingsma.com/fbo-services/' },
  { name: 'Aircraft Maintenance', url: 'https://www.flyingsma.com/fbo-services/maintenance/' },
];
---

<FBOLayout title="Aircraft Maintenance" description="Professional aircraft maintenance services at Southern Maine Aviation. Annual inspections, repairs, and more.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<ServiceSchema
		slot="head"
		name="Aircraft Maintenance"
		description="Professional aircraft maintenance services including annual inspections, repairs, engine work, and avionics installation."
		url="https://www.flyingsma.com/fbo-services/maintenance/"
		serviceType="Aircraft Maintenance"
	/>
	<!-- Page Header -->
	<section class="relative text-white py-20 md:py-28 overflow-hidden">
		<!-- Background Image -->
		<div
			class="absolute inset-0 bg-cover bg-center bg-no-repeat"
			style="background-image: url('/images/maintenance/maintenance1.jpg');"
		></div>
		<!-- Gradient Overlay for readability -->
		<div class="absolute inset-0 bg-gradient-to-br from-orange-900/90 via-orange-900/80 to-orange-800/85"></div>

		<div class="container mx-auto px-4 text-center relative z-10">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 drop-shadow-lg">Aircraft Maintenance</h1>
			<p class="text-xl md:text-2xl text-orange-100 max-w-3xl mx-auto mb-8 drop-shadow">
				Our experienced mechanics give you peace of mind knowing your aircraft is in top-notch condition
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<a
					href={`tel:${site.contact.fbo.phone}`}
					class="inline-flex items-center px-8 py-4 bg-white text-orange-900 font-semibold rounded-lg hover:bg-orange-50 transition-colors shadow-lg"
				>
					<i class="fa-solid fa-phone mr-2"></i>
					Call: {site.contact.fbo.phone}
				</a>
				<a
					href={`mailto:${site.contact.maintenance.email}`}
					class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white/10 transition-colors"
				>
					<i class="fa-solid fa-envelope mr-2"></i>
					Email: {site.contact.maintenance.email}
				</a>
			</div>
		</div>
	</section>

	<!-- Services Grid -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Our Services</h2>
				<p class="text-gray-600 max-w-2xl mx-auto">
					Comprehensive maintenance services to keep your aircraft safe and airworthy
				</p>
			</div>

			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-5xl mx-auto">
				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-clipboard-check text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">Annual Inspections</h3>
					<p class="text-gray-600">
						Thorough annual inspections to ensure your aircraft meets all FAA requirements and is safe to fly.
					</p>
				</div>

				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-clock text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">100-Hour Inspections</h3>
					<p class="text-gray-600">
						Required inspections for aircraft used in commercial operations or flight training.
					</p>
				</div>

				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-magnifying-glass text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">Pre-Buy Inspections</h3>
					<p class="text-gray-600">
						Comprehensive inspections before you purchase an aircraft to identify any issues or concerns.
					</p>
				</div>

				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-gears text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">Engine Maintenance</h3>
					<p class="text-gray-600">
						From routine maintenance to complete overhauls, we keep your engine running smoothly.
					</p>
				</div>

				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-display text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">Avionics</h3>
					<p class="text-gray-600">
						Installation and repair of avionics equipment to keep you connected and navigating safely.
					</p>
				</div>

				<div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
					<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
						<i class="fa-solid fa-warehouse text-orange-600 text-xl"></i>
					</div>
					<h3 class="text-xl font-bold text-gray-900 mb-2">Aircraft Storage</h3>
					<p class="text-gray-600">
						Secure indoor and outdoor storage options to protect your investment.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Us -->
	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Our Maintenance Team?</h2>
				</div>

				<div class="grid md:grid-cols-2 gap-8">
					<div class="flex items-start">
						<div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
							<i class="fa-solid fa-certificate text-orange-600"></i>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Experienced Mechanics</h3>
							<p class="text-gray-600">Our experienced team is dedicated to excellence in aircraft maintenance.</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
							<i class="fa-solid fa-clock text-orange-600"></i>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Timely Service</h3>
							<p class="text-gray-600">We understand your time is valuable and work efficiently to get you back in the air.</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
							<i class="fa-solid fa-shield-check text-orange-600"></i>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Thorough Inspections</h3>
							<p class="text-gray-600">Every inspection is comprehensive, giving you peace of mind about your aircraft's condition.</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
							<i class="fa-solid fa-users text-orange-600"></i>
						</div>
						<div>
							<h3 class="font-bold text-gray-900 mb-1">Personal Service</h3>
							<p class="text-gray-600">We treat every aircraft like it's our own, with attention to detail and care.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<ContactSection
		title="Schedule Your Maintenance"
		description="Contact our maintenance team to schedule an inspection or discuss your aircraft's needs."
		variant="default"
		showMap={false}
	/>
</FBOLayout>
