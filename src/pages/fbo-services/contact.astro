---
import FBOLayout from "../../layouts/FBOLayout.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import site from "../../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'FBO Services', url: 'https://www.flyingsma.com/fbo-services/' },
  { name: 'Contact', url: 'https://www.flyingsma.com/fbo-services/contact/' },
];
---

<FBOLayout title="Contact FBO Services" description="Get in touch with Southern Maine Aviation's FBO for corporate arrivals, maintenance, fuel, and other services.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<!-- Page Header -->
	<section class="bg-gradient-to-br from-slate-900 to-slate-800 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Contact FBO Services</h1>
			<p class="text-xl text-slate-300 max-w-2xl mx-auto">
				Reach out for corporate arrivals, aircraft maintenance, fuel services, and more.
			</p>
		</div>
	</section>

	<!-- Contact Info Section -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
				<!-- Contact Details -->
				<div>
					<h2 class="text-2xl font-bold text-gray-900 mb-6">FBO Desk</h2>
					<div class="space-y-6">
						<a href={`tel:${site.contact.fbo.phone}`} class="flex items-center text-gray-700 hover:text-slate-600 group">
							<div class="w-12 h-12 bg-slate-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-slate-200 transition-colors">
								<i class="fa-solid fa-phone text-xl text-slate-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Desk Phone</p>
								<p class="font-semibold text-lg">{site.contact.fbo.phone}</p>
							</div>
						</a>
						<a href={`mailto:${site.contact.fbo.email}`} class="flex items-center text-gray-700 hover:text-slate-600 group">
							<div class="w-12 h-12 bg-slate-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-slate-200 transition-colors">
								<i class="fa-solid fa-envelope text-xl text-slate-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Email</p>
								<p class="font-semibold text-lg">{site.contact.fbo.email}</p>
							</div>
						</a>
						<div class="flex items-start text-gray-700">
							<div class="w-12 h-12 bg-slate-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
								<i class="fa-solid fa-location-dot text-xl text-slate-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Address</p>
								<p class="font-semibold">{site.address.street1}</p>
								<p>{site.address.city}, {site.address.state} {site.address.zip}</p>
							</div>
						</div>
						<div class="flex items-center text-gray-700">
							<div class="w-12 h-12 bg-slate-100 rounded-full flex items-center justify-center mr-4">
								<i class="fa-solid fa-clock text-xl text-slate-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Hours</p>
								<p class="font-semibold">{site.hours.display}</p>
								<p class="text-sm text-gray-500">{site.hours.altDisplay}</p>
							</div>
						</div>
					</div>

					<!-- After Hours -->
					<div class="mt-8 p-6 bg-amber-50 rounded-xl border border-amber-200">
						<h3 class="font-bold text-gray-900 mb-2">After Hours Service</h3>
						<p class="text-sm text-gray-600 mb-3">
							After hours available on request, {site.contact.afterHours.rate}
						</p>
						<a href={`tel:${site.contact.afterHours.phone}`} class="inline-flex items-center text-amber-700 font-semibold hover:text-amber-800">
							<i class="fa-solid fa-phone mr-2"></i>
							{site.contact.afterHours.phone} - {site.contact.afterHours.name}
						</a>
					</div>

					<!-- Maintenance Contact -->
					<div class="mt-6 p-6 bg-orange-50 rounded-xl border border-orange-200">
						<h3 class="font-bold text-gray-900 mb-2">Aircraft Maintenance</h3>
						<a href={`mailto:${site.contact.maintenance.email}`} class="inline-flex items-center text-orange-700 font-semibold hover:text-orange-800">
							<i class="fa-solid fa-envelope mr-2"></i>
							{site.contact.maintenance.email}
						</a>
					</div>
				</div>

				<!-- Map -->
				<div class="bg-gray-100 rounded-xl overflow-hidden shadow-lg">
					<iframe
						src={site.maps.embedUrl}
						width="100%"
						height="100%"
						style="border:0; min-height: 550px;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						title="Southern Maine Aviation Location"
					></iframe>
				</div>
			</div>
		</div>
	</section>

	<!-- Back Links -->
	<section class="py-8 bg-white">
		<div class="container mx-auto px-4 text-center">
			<a href="/fbo-services" class="inline-flex items-center text-slate-600 hover:text-slate-800 font-medium">
				<i class="fa-solid fa-chevron-left mr-2"></i>
				Back to FBO Services
			</a>
			<span class="mx-4 text-gray-300">|</span>
			<a href="/contact" class="text-gray-600 hover:text-gray-800">
				Looking for Flight Training? Contact Flight School
			</a>
		</div>
	</section>
</FBOLayout>
