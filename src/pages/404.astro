---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../data/site.json";
---

<BaseLayout title="Page Not Found" noindex={true}>
  <section class="min-h-[60vh] flex items-center justify-center bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <!-- 404 Icon -->
        <div class="mb-8">
          <i class="fa-solid fa-plane text-9xl text-sky-200"></i>
        </div>

        <!-- Error Message -->
        <h1 class="text-6xl md:text-8xl font-bold text-gray-900 mb-4">404</h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-700 mb-4">Page Not Found</h2>
        <p class="text-lg text-gray-600 mb-8">
          Looks like this page has taken off without us! The page you're looking for doesn't exist or may have been moved.
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <a
            href="/"
            class="inline-flex items-center px-6 py-3 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transition-colors"
          >
            <i class="fa-solid fa-house mr-2"></i>
            Back to Home
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-6 py-3 border-2 border-blue-600 text-sky-600 font-semibold rounded-lg hover:bg-sky-50 transition-colors"
          >
            <i class="fa-solid fa-envelope mr-2"></i>
            Contact Us
          </a>
        </div>

        <!-- Quick Links -->
        <div class="border-t border-gray-200 pt-8">
          <p class="text-sm text-gray-500 mb-4">Looking for something specific?</p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/flight-school" class="text-sky-600 hover:text-sky-800 font-medium">
              Flight School
            </a>
            <span class="text-gray-300">|</span>
            <a href="/fbo-services" class="text-sky-600 hover:text-sky-800 font-medium">
              FBO Services
            </a>
            <span class="text-gray-300">|</span>
            <a href="/news" class="text-sky-600 hover:text-sky-800 font-medium">
              News
            </a>
            <span class="text-gray-300">|</span>
            <a href="/contact" class="text-sky-600 hover:text-sky-800 font-medium">
              Contact
            </a>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="mt-8 p-6 bg-white rounded-xl shadow-md">
          <p class="text-gray-600 mb-2">Need help? Give us a call:</p>
          <div class="flex flex-wrap justify-center gap-6">
            <a href={`tel:${site.contact.flight.phone}`} class="text-sky-600 hover:text-sky-800 font-semibold">
              Flight Training: {site.contact.flight.phone}
            </a>
            <a href={`tel:${site.contact.fbo.phone}`} class="text-sky-600 hover:text-sky-800 font-semibold">
              FBO: {site.contact.fbo.phone}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
