---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServicesSection from "../components/sections/ServicesSection.astro";
import NewsSection from "../components/sections/NewsSection.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import OrganizationSchema from "../components/seo/OrganizationSchema.astro";
import WebsiteSchema from "../components/seo/WebsiteSchema.astro";
import site from "../data/site.json";

// Available hero images
const heroImages = ['1.jpg', '2.jpg', '3.jpg', '4.jpg', '5.jpg'];

// Randomly select an image on each page load
const randomHeroImage = heroImages[Math.floor(Math.random() * heroImages.length)];
const heroImagePath = `/images/hero/${randomHeroImage}`;
---

<BaseLayout title="Southern Maine Aviation">
	<OrganizationSchema slot="head" />
	<WebsiteSchema slot="head" />
	<div class="min-h-screen relative">
		<!-- Background Image with Overlay -->
		<div 
			class="fixed inset-0 bg-cover bg-center bg-no-repeat -z-10"
			style={`background-image: url('${heroImagePath}');`}
			aria-hidden="true"
		></div>
		
		<!-- Dark Overlay for Readability -->
		<div class="fixed inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/60 -z-10" aria-hidden="true"></div>
		
		<!-- Content Layer -->
		<div class="relative z-10">
			<!-- Hero Section -->
			<div class="container mx-auto px-4 py-12 md:py-20">
			<div class="text-center mb-12 md:mb-16">
				<h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-4 tracking-tight drop-shadow-lg">
					Welcome to
					<span class="block text-[#f98a14] mt-2 drop-shadow-md">Southern Maine Aviation</span>
				</h1>
				<p class="text-xl md:text-2xl text-gray-100 max-w-2xl mx-auto drop-shadow-md">
					Choose your path to the skies
				</p>
			</div>

			<!-- Split Choice Cards -->
			<div class="grid md:grid-cols-2 gap-6 md:gap-8 max-w-6xl mx-auto">
				<!-- Flight School Card (Left) -->
				<a href="/flight-school" id="cta-flight-school" class="group relative overflow-hidden rounded-2xl text-white shadow-2xl hover:shadow-3xl transition-all duration-500 transform hover:scale-[1.02] hover:-translate-y-2">
					<!-- Left-Directional Background Gradient -->
					<div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-blue-600"></div>

					<!-- Left-Side Accent Border -->
					<div class="absolute left-0 top-0 bottom-0 w-2 bg-blue-400 shadow-lg"></div>

					<!-- Content -->
					<div class="relative p-8 md:p-12 h-full min-h-[400px] md:min-h-[500px] flex flex-col justify-between">
						<div>
							<!-- Icon -->
							<div class="mb-6 transform group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
								<i class="fa-solid fa-plane text-6xl md:text-7xl"></i>
							</div>

							<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
								Flight School
							</h2>
							<p class="text-blue-100 text-lg md:text-xl mb-6 leading-relaxed">
								Learn To Fly Today!
							</p>
							<p class="text-blue-50 text-base md:text-lg leading-relaxed">
								Whether you are a beginner or advanced, just starting out on your aviation journey or looking to enhance your skills, we can work with you to create the perfect program.
							</p>
						</div>

						<!-- CTA Button -->
						<div class="mt-8">
							<span class="inline-flex items-center text-lg md:text-xl font-semibold group-hover:-translate-x-2 transition-transform duration-300">
								<i class="fa-solid fa-chevron-left mr-2 transform group-hover:-translate-x-1 transition-transform"></i>
								Start Your Journey
							</span>
							<div class="mt-2 text-sm text-blue-200">
								Call or Text: <span class="font-semibold">{site.contact.flight.phone}</span>
							</div>
						</div>
					</div>

					<!-- Hover Effect Overlay -->
					<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
				</a>

				<!-- FBO/Maintenance Card (Right) -->
				<a href="/fbo-services" id="cta-fbo-services" class="group relative overflow-hidden rounded-2xl text-white shadow-2xl hover:shadow-3xl transition-all duration-500 transform hover:scale-[1.02] hover:-translate-y-2">
					<!-- Right-Directional Background Gradient -->
					<div class="absolute inset-0 bg-gradient-to-l from-slate-800 to-slate-700"></div>

					<!-- Right-Side Accent Border -->
					<div class="absolute right-0 top-0 bottom-0 w-2 bg-slate-400 shadow-lg"></div>

					<!-- Content -->
					<div class="relative p-8 md:p-12 h-full min-h-[400px] md:min-h-[500px] flex flex-col justify-between">
						<div>
							<!-- Icon -->
							<div class="mb-6 transform group-hover:scale-110 group-hover:-rotate-3 transition-transform duration-500">
								<i class="fa-solid fa-gears text-6xl md:text-7xl"></i>
							</div>

							<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
								FBO & Maintenance
							</h2>
							<p class="text-slate-300 text-lg md:text-xl mb-6 leading-relaxed">
								We're Here For You!
							</p>
							<p class="text-slate-200 text-base md:text-lg leading-relaxed">
								Full-service FBO providing corporate arrivals, aircraft maintenance, storage, and service for General Aviation and corporate aircraft, including Air Force One!
							</p>
						</div>

						<!-- CTA Button -->
						<div class="mt-8">
							<span class="inline-flex items-center text-lg md:text-xl font-semibold group-hover:translate-x-2 transition-transform duration-300">
								Explore Services
								<i class="fa-solid fa-chevron-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
							</span>
							<div class="mt-2 text-sm text-slate-300">
								Desk Phone: <span class="font-semibold">{site.contact.fbo.phone}</span>
							</div>
						</div>
					</div>

					<!-- Hover Effect Overlay -->
					<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
				</a>
			</div>
		</div>
		</div>
	</div>

	<script>
		// Track clicks on main landing page CTAs
		document.getElementById('cta-flight-school')?.addEventListener('click', () => {
			if (typeof gtag === 'function') {
				gtag('event', 'subsite_selection', {
					'event_category': 'Navigation',
					'event_label': 'Flight Training',
					'value': 1
				});
			}
		});

		document.getElementById('cta-fbo-services')?.addEventListener('click', () => {
			if (typeof gtag === 'function') {
				gtag('event', 'subsite_selection', {
					'event_category': 'Navigation',
					'event_label': 'FBO Services',
					'value': 1
				});
			}
		});
	</script>
</BaseLayout>
