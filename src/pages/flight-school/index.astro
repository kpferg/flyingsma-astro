---
import { getCollection } from 'astro:content';
import BaseLayout from "../../layouts/BaseLayout.astro";
import InstructorsSection from "../../components/sections/InstructorsSection.astro";
import FleetSection from "../../components/sections/FleetSection.astro";
import FAQSection from "../../components/sections/FAQSection.astro";
import ContactSection from "../../components/sections/ContactSection.astro";
import FAQSchema from "../../components/seo/FAQSchema.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import site from "../../data/site.json";

// Get FAQ data for schema
const faqCollection = await getCollection('faq');
const faqItems = faqCollection
  .sort((a, b) => a.data.order - b.data.order)
  .map((item) => ({
    question: item.data.question,
    answer: item.data.answer,
  }));

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'Flight School', url: 'https://www.flyingsma.com/flight-school/' },
];
---

<BaseLayout title="Flight School" description="Learn to fly at Southern Maine Aviation. Private pilot, instrument, commercial, multi-engine, and tailwheel training.">
	<FAQSchema slot="head" faqs={faqItems} />
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<!-- Page Header -->
	<section class="bg-gradient-to-br from-blue-900 to-blue-800 text-white py-20">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Learn To Fly Today!</h1>
			<p class="text-xl md:text-2xl text-blue-200 max-w-3xl mx-auto mb-8">
				Whether you are a beginner or advanced, we can work with you to create the perfect program
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<a
					href={`tel:${site.contact.flight.phone}`}
					class="inline-flex items-center px-8 py-4 bg-white text-blue-900 font-semibold rounded-lg hover:bg-blue-50 transition-colors"
				>
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
					</svg>
					Call or Text: {site.contact.flight.phone}
				</a>
				<a
					href="#programs"
					class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white/10 transition-colors"
				>
					View Programs
					<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Training Programs -->
	<section class="py-16 bg-white" id="programs">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Training Programs</h2>
				<p class="text-gray-600 max-w-2xl mx-auto">
					From your first flight to advanced ratings, we have a program for every aviation goal
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
				<!-- Private Pilot -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
					<div class="h-48 bg-gradient-to-br from-blue-600 to-blue-700 flex items-center justify-center">
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Private Pilot Certificate</h3>
						<p class="text-gray-600 mb-4">
							Your first step into aviation. Learn to fly and earn your wings with comprehensive ground and flight training.
						</p>
						<ul class="text-sm text-gray-500 space-y-1 mb-4">
							<li>• FAA minimum: 40 hours (typical: 60+ hours)</li>
							<li>• Includes ground school</li>
							<li>• Written and practical exams</li>
						</ul>
					</div>
				</div>

				<!-- Instrument Rating -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
					<div class="h-48 bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center">
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Instrument Rating</h3>
						<p class="text-gray-600 mb-4">
							Fly safely in clouds and low visibility conditions. Essential for serious pilots and career aviators.
						</p>
						<ul class="text-sm text-gray-500 space-y-1 mb-4">
							<li>• Fly in IMC conditions</li>
							<li>• Enhanced safety skills</li>
							<li>• Required for many careers</li>
						</ul>
					</div>
				</div>

				<!-- Commercial Certificate -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
					<div class="h-48 bg-gradient-to-br from-green-600 to-green-700 flex items-center justify-center">
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Commercial Certificate</h3>
						<p class="text-gray-600 mb-4">
							Get paid to fly! The commercial certificate opens doors to professional aviation careers.
						</p>
						<ul class="text-sm text-gray-500 space-y-1 mb-4">
							<li>• Fly for compensation</li>
							<li>• Higher skill standards</li>
							<li>• Career opportunities</li>
						</ul>
					</div>
				</div>

				<!-- Multi-Engine -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group border-2 border-blue-500">
					<div class="h-48 bg-gradient-to-br from-blue-700 to-indigo-800 flex items-center justify-center relative">
						<span class="absolute top-4 right-4 bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full">
							NOW AVAILABLE
						</span>
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Multi-Engine Rating</h3>
						<p class="text-gray-600 mb-4">
							Our beautiful twin engine trainer has arrived! Learn to fly multi-engine aircraft.
						</p>
						<a
							href="/flight-school/multi-engine"
							class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
						>
							Learn More
							<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</a>
					</div>
				</div>

				<!-- Tailwheel -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
					<div class="h-48 bg-gradient-to-br from-orange-600 to-orange-700 flex items-center justify-center">
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Tailwheel Endorsement</h3>
						<p class="text-gray-600 mb-4">
							Master "stick and rudder" flying in our Citabria. True aviation at its finest.
						</p>
						<ul class="text-sm text-gray-500 space-y-1 mb-4">
							<li>• Classic flying experience</li>
							<li>• Enhanced coordination</li>
							<li>• Great for backcountry</li>
						</ul>
					</div>
				</div>

				<!-- Backcountry -->
				<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
					<div class="h-48 bg-gradient-to-br from-emerald-600 to-emerald-700 flex items-center justify-center">
						<svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-bold text-gray-900 mb-2">Backcountry Experience</h3>
						<p class="text-gray-600 mb-4">
							Grass strips and remote flying. Adventure awaits beyond paved runways.
						</p>
						<ul class="text-sm text-gray-500 space-y-1 mb-4">
							<li>• Off-airport operations</li>
							<li>• Short field techniques</li>
							<li>• Adventure flying</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Discovery Flight CTA -->
	<section class="py-16 bg-blue-600">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Not Sure Where to Start?</h2>
			<p class="text-xl text-blue-100 max-w-2xl mx-auto mb-8">
				Take a Discovery Flight - your first lesson and introduction to the world of aviation. Only $155 including your first logbook!
			</p>
			<a
				href={`tel:${site.contact.flight.phone}`}
				class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition-colors"
			>
				Schedule Your Discovery Flight
			</a>
		</div>
	</section>

	<!-- Instructors Section -->
	<InstructorsSection
		title="Meet Our Instructors"
		description="Our experienced team of flight instructors are dedicated to helping you achieve your aviation goals."
		variant="default"
		columns={4}
	/>

	<!-- Fleet Section -->
	<FleetSection
		title="Our Fleet"
		description="We maintain a diverse fleet of well-equipped aircraft for all your training needs."
	/>

	<!-- FAQ Section -->
	<FAQSection
		title="Common Questions"
		description="Answers to frequently asked questions about learning to fly."
		grouped={false}
	/>

	<!-- Contact Section -->
	<ContactSection
		title="Ready to Start Flying?"
		description="Contact us to schedule your first lesson or ask any questions about our training programs."
		variant="default"
		showMap={false}
	/>
</BaseLayout>
