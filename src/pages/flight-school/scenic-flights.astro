---
import FlightSchoolLayout from "../../layouts/FlightSchoolLayout.astro";
import ContactSection from "../../components/sections/ContactSection.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import ServiceSchema from "../../components/seo/ServiceSchema.astro";
import site from "../../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'Flight School', url: 'https://www.flyingsma.com/flight-school/' },
  { name: 'Scenic Flights', url: 'https://www.flyingsma.com/flight-school/scenic-flights/' },
];
---

<FlightSchoolLayout title="Scenic Flights" description="Experience the beauty of Maine from the air with a scenic flight from Southern Maine Aviation.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<ServiceSchema
		slot="head"
		name="Scenic Flights"
		description="Experience the beauty of coastal Maine from the air with a scenic flight. Perfect for special occasions, gifts, or an introduction to aviation."
		url="https://www.flyingsma.com/flight-school/scenic-flights/"
		serviceType="Sightseeing Flight"
	/>
	<!-- Page Header -->
	<section class="relative text-white py-20 md:py-28 overflow-hidden">
		<!-- Background Image -->
		<div
			class="absolute inset-0 bg-cover bg-center bg-no-repeat"
			style="background-image: url('/images/scenic-flights/scenic.jpg');"
		></div>
		<!-- Gradient Overlay for readability -->
		<div class="absolute inset-0 bg-gradient-to-br from-slate-950/99 via-sky-800/80 to-sky-400/75"></div>
		
		<div class="container mx-auto px-4 text-center relative z-10">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 drop-shadow-lg">Scenic Flights</h1>
			<p class="text-xl md:text-2xl text-sky-100 max-w-2xl mx-auto mb-8 drop-shadow">
				A truly memorable experience and a great introduction to flight
			</p>
			<a
				href={`tel:${site.contact.flight.phone}`}
				class="inline-flex items-center px-8 py-4 bg-white text-sky-900 font-semibold rounded-lg hover:bg-sky-50 transition-colors shadow-lg"
			>
				<i class="fa-solid fa-phone mr-2"></i>
				Book Now: {site.contact.flight.phone}
			</a>
		</div>
	</section>

	<!-- Main Content -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<div class="prose prose-lg max-w-none">
					<p class="text-xl text-gray-700 leading-relaxed mb-8">
						Scenic and Discovery Flights at Southern Maine Aviation are a truly memorable experience and a great introduction to flight. They also make great gifts!
					</p>

					<div class="grid md:grid-cols-2 gap-8 my-12">
						<div class="bg-sky-50 rounded-xl p-8">
							<h3 class="text-2xl font-bold text-gray-900 mb-4">What to Expect</h3>
							<ul class="space-y-3 text-gray-700">
								<li class="flex items-start">
									<i class="fa-solid fa-check text-sky-600 mr-3 mt-1 flex-shrink-0"></i>
									Breathtaking views of coastal Maine
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-check text-sky-600 mr-3 mt-1 flex-shrink-0"></i>
									Professional, experienced pilots
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-check text-sky-600 mr-3 mt-1 flex-shrink-0"></i>
									Well-maintained, comfortable aircraft
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-check text-sky-600 mr-3 mt-1 flex-shrink-0"></i>
									Custom routes available
								</li>
							</ul>
						</div>

						<div class="bg-green-50 rounded-xl p-8">
							<h3 class="text-2xl font-bold text-gray-900 mb-4">Perfect For</h3>
							<ul class="space-y-3 text-gray-700">
								<li class="flex items-start">
									<i class="fa-solid fa-gift text-green-600 mr-3 mt-1 flex-shrink-0"></i>
									Birthday celebrations
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-heart text-green-600 mr-3 mt-1 flex-shrink-0"></i>
									Anniversary surprises
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-users text-green-600 mr-3 mt-1 flex-shrink-0"></i>
									Family outings
								</li>
								<li class="flex items-start">
									<i class="fa-solid fa-lightbulb text-green-600 mr-3 mt-1 flex-shrink-0"></i>
									First-time flyers
								</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Discovery Flights -->
				<div class="bg-gray-50 rounded-xl p-8 my-12">
					<h3 class="text-2xl font-bold text-gray-900 mb-4">Discovery Flights</h3>
					<p class="text-gray-700 mb-4">
						Not sure if flying is for you? A Discovery Flight is your first flight lesson and introduction to the airplane and the world of flight. Actual flight time is about 30 minutes, during which you take the controls for some basic flight maneuvers.
					</p>
					<div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
						<p class="text-amber-800 text-sm">
							<strong>Important:</strong> Must present proof of U.S. Citizenship in accordance with TSA guidelines.
						</p>
					</div>
					<div class="flex flex-wrap gap-4">
						<a
							href="/flight-school"
							class="inline-flex items-center px-6 py-3 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transition-colors"
						>
							Learn More About Flight Training
						</a>
						<a
							href={`tel:${site.contact.flight.phone}`}
							class="inline-flex items-center px-6 py-3 border-2 border-blue-600 text-sky-600 font-semibold rounded-lg hover:bg-sky-50 transition-colors"
						>
							Call to Schedule
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<ContactSection
		title="Ready to Fly?"
		description="Contact us to schedule your scenic flight experience."
		variant="default"
		showMap={false}
	/>
</FlightSchoolLayout>
