---
import FlightSchoolLayout from "../../layouts/FlightSchoolLayout.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import site from "../../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'Flight School', url: 'https://www.flyingsma.com/flight-school/' },
  { name: 'Contact', url: 'https://www.flyingsma.com/contact/' },
];
---

<FlightSchoolLayout title="Contact Flight Training" description="Get in touch with Southern Maine Aviation's Flight Department for flight training, discovery flights, and aircraft rentals.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<!-- Page Header -->
	<section class="bg-gradient-to-br from-blue-900 to-blue-800 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Flight Training</h1>
			<p class="text-xl text-blue-200 max-w-2xl mx-auto">
				Ready to start your aviation journey? Reach out to our Flight Department for training, discovery flights, or aircraft rentals.
			</p>
		</div>
	</section>

	<!-- Contact Info Section -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
				<!-- Contact Details -->
				<div>
					<h2 class="text-2xl font-bold text-gray-900 mb-6">Flight Department</h2>
					<div class="space-y-6">
						<a href={`tel:${site.contact.flight.phone}`} class="flex items-center text-gray-700 hover:text-blue-600 group">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
								</svg>
							</div>
							<div>
								<p class="text-sm text-gray-500">Call or Text</p>
								<p class="font-semibold text-lg">{site.contact.flight.phone}</p>
							</div>
						</a>
						<a href={`mailto:${site.contact.flight.email}`} class="flex items-center text-gray-700 hover:text-blue-600 group">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<div>
								<p class="text-sm text-gray-500">Email</p>
								<p class="font-semibold text-lg">{site.contact.flight.email}</p>
							</div>
						</a>
						<div class="flex items-start text-gray-700">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<div>
								<p class="text-sm text-gray-500">Address</p>
								<p class="font-semibold">{site.address.street1}</p>
								<p>{site.address.city}, {site.address.state} {site.address.zip}</p>
							</div>
						</div>
						<div class="flex items-center text-gray-700">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<div>
								<p class="text-sm text-gray-500">Hours</p>
								<p class="font-semibold">{site.hours.display}</p>
								<p class="text-sm text-gray-500">{site.hours.altDisplay}</p>
							</div>
						</div>
					</div>

					<!-- Social Links -->
					<div class="mt-8 pt-8 border-t border-gray-200">
						<p class="text-sm text-gray-500 mb-4">Follow Us</p>
						<div class="flex gap-4">
							{site.social.facebook && (
								<a href={site.social.facebook} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-500 hover:bg-blue-100 hover:text-blue-600 transition-colors" aria-label="Facebook">
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
									</svg>
								</a>
							)}
						</div>
					</div>
				</div>

				<!-- Map -->
				<div class="bg-gray-100 rounded-xl overflow-hidden shadow-lg">
					<iframe
						src={site.maps.embedUrl}
						width="100%"
						height="100%"
						style="border:0; min-height: 450px;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						title="Southern Maine Aviation Location"
					></iframe>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form Section -->
	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4 max-w-2xl">
			<div class="text-center mb-10">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Send Us a Message</h2>
				<p class="text-gray-600">
					Fill out the form below and our flight department will get back to you as soon as possible.
				</p>
			</div>

			<form
				action="https://formspree.io/f/your-form-id"
				method="POST"
				class="space-y-6 bg-white p-8 rounded-xl shadow-lg"
			>
				<div class="grid md:grid-cols-2 gap-6">
					<div>
						<label for="name" class="block text-sm font-medium text-gray-700 mb-2">
							Name <span class="text-red-500">*</span>
						</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
							placeholder="Your name"
						/>
					</div>
					<div>
						<label for="email" class="block text-sm font-medium text-gray-700 mb-2">
							Email <span class="text-red-500">*</span>
						</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
							placeholder="your@email.com"
						/>
					</div>
				</div>

				<div>
					<label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
						Phone
					</label>
					<input
						type="tel"
						id="phone"
						name="phone"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
						placeholder="(207) 555-0123"
					/>
				</div>

				<div>
					<label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
						Interest <span class="text-red-500">*</span>
					</label>
					<select
						id="subject"
						name="subject"
						required
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
					>
						<option value="">What are you interested in?</option>
						<option value="discovery-flight">Discovery Flight</option>
						<option value="private-pilot">Private Pilot Training</option>
						<option value="instrument-rating">Instrument Rating</option>
						<option value="commercial">Commercial Certificate</option>
						<option value="multi-engine">Multi-Engine Training</option>
						<option value="tailwheel">Tailwheel Training</option>
						<option value="aircraft-rental">Aircraft Rental</option>
						<option value="scenic-flight">Scenic Flight</option>
						<option value="other">Other</option>
					</select>
				</div>

				<div>
					<label for="message" class="block text-sm font-medium text-gray-700 mb-2">
						Message <span class="text-red-500">*</span>
					</label>
					<textarea
						id="message"
						name="message"
						required
						rows="5"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
						placeholder="Tell us about your aviation goals..."
					></textarea>
				</div>

				<div class="text-center">
					<button
						type="submit"
						class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition-all duration-200"
					>
						Send Message
						<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
						</svg>
					</button>
				</div>
			</form>
		</div>
	</section>

	<!-- Back to Flight School -->
	<section class="py-8 bg-white">
		<div class="container mx-auto px-4 text-center">
			<a href="/flight-school" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
				<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				Back to Flight School
			</a>
			<span class="mx-4 text-gray-300">|</span>
			<a href="/fbo-services/contact" class="text-gray-600 hover:text-gray-800">
				Looking for FBO Services? Contact FBO
			</a>
		</div>
	</section>
</FlightSchoolLayout>
