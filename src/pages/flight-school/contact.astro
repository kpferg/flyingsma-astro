---
import FlightSchoolLayout from "../../layouts/FlightSchoolLayout.astro";
import BreadcrumbSchema from "../../components/seo/BreadcrumbSchema.astro";
import site from "../../data/site.json";

const breadcrumbs = [
  { name: 'Home', url: 'https://www.flyingsma.com/' },
  { name: 'Flight School', url: 'https://www.flyingsma.com/flight-school/' },
  { name: 'Contact', url: 'https://www.flyingsma.com/contact/' },
];
---

<FlightSchoolLayout title="Contact Flight Training" description="Get in touch with Southern Maine Aviation's Flight Department for flight training, discovery flights, and aircraft rentals.">
	<BreadcrumbSchema slot="head" items={breadcrumbs} />
	<!-- Page Header -->
	<section class="bg-gradient-to-br from-blue-900 to-blue-800 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Flight Training</h1>
			<p class="text-xl text-blue-200 max-w-2xl mx-auto">
				Ready to start your aviation journey? Reach out to our Flight Department for training, discovery flights, or aircraft rentals.
			</p>
		</div>
	</section>

	<!-- Contact Info Section -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
				<!-- Contact Details -->
				<div>
					<h2 class="text-2xl font-bold text-gray-900 mb-6">Flight Department</h2>
					<div class="space-y-6">
						<a href={`tel:${site.contact.flight.phone}`} class="flex items-center text-gray-700 hover:text-blue-600 group">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors">
								<i class="fa-solid fa-phone text-xl text-blue-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Call or Text</p>
								<p class="font-semibold text-lg">{site.contact.flight.phone}</p>
							</div>
						</a>
						<a href={`mailto:${site.contact.flight.email}`} class="flex items-center text-gray-700 hover:text-blue-600 group">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors">
								<i class="fa-solid fa-envelope text-xl text-blue-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Email</p>
								<p class="font-semibold text-lg">{site.contact.flight.email}</p>
							</div>
						</a>
						<div class="flex items-start text-gray-700">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
								<i class="fa-solid fa-location-dot text-xl text-blue-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Address</p>
								<p class="font-semibold">{site.address.street1}</p>
								<p>{site.address.city}, {site.address.state} {site.address.zip}</p>
							</div>
						</div>
						<div class="flex items-center text-gray-700">
							<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
								<i class="fa-solid fa-clock text-xl text-blue-600"></i>
							</div>
							<div>
								<p class="text-sm text-gray-500">Hours</p>
								<p class="font-semibold">{site.hours.display}</p>
								<p class="text-sm text-gray-500">{site.hours.altDisplay}</p>
							</div>
						</div>
					</div>

					<!-- Social Links -->
					<div class="mt-8 pt-8 border-t border-gray-200">
						<p class="text-sm text-gray-500 mb-4">Follow Us</p>
						<div class="flex gap-4">
							{site.social.facebook && (
								<a href={site.social.facebook} target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-500 hover:bg-blue-100 hover:text-blue-600 transition-colors" aria-label="Facebook">
									<i class="fa-brands fa-facebook text-xl"></i>
								</a>
							)}
						</div>
					</div>
				</div>

				<!-- Map -->
				<div class="bg-gray-100 rounded-xl overflow-hidden shadow-lg">
					<iframe
						src={site.maps.embedUrl}
						width="100%"
						height="100%"
						style="border:0; min-height: 450px;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						title="Southern Maine Aviation Location"
					></iframe>
				</div>
			</div>
		</div>
	</section>

	<!-- Back to Flight School -->
	<section class="py-8 bg-white">
		<div class="container mx-auto px-4 text-center">
			<a href="/flight-school" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
				<i class="fa-solid fa-chevron-left mr-2"></i>
				Back to Flight School
			</a>
			<span class="mx-4 text-gray-300">|</span>
			<a href="/fbo-services/contact" class="text-gray-600 hover:text-gray-800">
				Looking for FBO Services? Contact FBO
			</a>
		</div>
	</section>
</FlightSchoolLayout>
