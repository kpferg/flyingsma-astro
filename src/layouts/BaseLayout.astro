---
import '../styles/global.css'  
const { title = "My Site" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-white shadow-md sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
            Southern Maine Aviation
          </a>
          
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-6">
            <a href="/scheduling" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              Scheduling for Current Customers
            </a>
            <a href="/news" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              News
            </a>
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 font-medium transition-colors flex items-center">
                Services
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="py-2">
                  <a href="/services" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">All Services</a>
                  <a href="/services/corporate-arrivals" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Corporate Arrivals</a>
                  <a href="/services/flight-release" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Flight Release</a>
                </div>
              </div>
            </div>
            <a href="/contact" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              Contact
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button class="md:hidden text-gray-700 focus:outline-none" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div class="hidden md:hidden mt-4 pb-4" id="mobile-menu">
          <a href="/scheduling" class="block py-2 text-gray-700 hover:text-blue-600">Scheduling for Current Customers</a>
          <a href="/news" class="block py-2 text-gray-700 hover:text-blue-600">News</a>
          <a href="/services" class="block py-2 text-gray-700 hover:text-blue-600">All Services</a>
          <a href="/services/corporate-arrivals" class="block py-2 pl-4 text-gray-600 hover:text-blue-600">Corporate Arrivals</a>
          <a href="/services/flight-release" class="block py-2 pl-4 text-gray-600 hover:text-blue-600">Flight Release</a>
          <a href="/contact" class="block py-2 text-gray-700 hover:text-blue-600">Contact</a>
        </div>
      </nav>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-auto">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Contact Information -->
          <div>
            <h3 class="text-xl font-bold mb-4">Contact Us</h3>
            <div class="space-y-3 text-gray-300">
              <div>
                <p class="font-semibold text-white mb-1">FBO Inquiries</p>
                <p>Desk Phone: <a href="tel:207-324-8919" class="hover:text-blue-400">207-324-8919</a></p>
                <p>Email: <a href="mailto:fly@flyingsma.com" class="hover:text-blue-400">fly@flyingsma.com</a></p>
              </div>
              <div>
                <p class="font-semibold text-white mb-1">Flight Training & Questions</p>
                <p>Call or Text: <a href="tel:207-569-4017" class="hover:text-blue-400">207-569-4017</a></p>
                <p>Email: <a href="mailto:flightdept@flyingsma.com" class="hover:text-blue-400">flightdept@flyingsma.com</a></p>
              </div>
              <div>
                <p class="font-semibold text-white mb-1">Maintenance</p>
                <p>Email: <a href="mailto:mx@flyingsma.com" class="hover:text-blue-400">mx@flyingsma.com</a></p>
              </div>
            </div>
          </div>

          <!-- Hours & Location -->
          <div>
            <h3 class="text-xl font-bold mb-4">Hours & Location</h3>
            <div class="space-y-3 text-gray-300">
              <p>Open 7 days a week</p>
              <p>7 AM to 5 PM</p>
              <p class="italic">Until 7 PM Memorial Day - Labor Day</p>
              <div class="mt-4">
                <p class="font-semibold text-white mb-1">Address</p>
                <p>199 Airport Road</p>
                <p>Sanford, Maine 04073</p>
                <a href="https://maps.google.com/?q=199+Airport+Road+Sanford+Maine+04073" target="_blank" class="text-blue-400 hover:text-blue-300 mt-2 inline-block">
                  Get directions...
                </a>
              </div>
            </div>
          </div>

          <!-- Social & Additional Info -->
          <div>
            <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
            <div class="space-y-4">
                <div>
                <a href="https://www.facebook.com/SouthernMaineAviation/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors">
                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                    Facebook
                </a>
                </div>
                <div>
                <a href="https://www.instagram.com/southernmaineaviation/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors">
                    <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                    Instagram
                </a>
                </div>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>Â© Copyright {new Date().getFullYear()} Southern Maine Aviation LLC. All rights reserved.</p>
          <p class="mt-2 text-sm">Created by <a href="http://greenhopperdesign.com/" target="_blank" class="text-[#5cb85c] hover:opacity-80 transition-opacity">Green Hopper Design</a></p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html>