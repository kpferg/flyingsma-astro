---
import navigation from '../../data/navigation.json';
import site from '../../data/site.json';

interface NavItem {
  label: string;
  href?: string;
  children?: NavItem[];
}

interface ExternalLink {
  label: string;
  href: string;
  icon?: string;
  newTab?: boolean;
}

const navItems = navigation.main as NavItem[];
const externalLinks = navigation.external as ExternalLink[];
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img
          src={navigation.brand.logo}
          alt={navigation.brand.alt || site.name}
          class="h-12 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1">
        {externalLinks.map((link) => (
          <a
            href={link.href}
            target={link.newTab ? "_blank" : undefined}
            rel={link.newTab ? "noopener noreferrer" : undefined}
            class="px-3 py-2 text-sm text-blue-600 hover:text-blue-800 font-medium transition-colors flex items-center"
          >
            {link.icon && (
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            )}
            {link.label}
          </a>
        ))}

        <div class="w-px h-6 bg-gray-300 mx-2"></div>

        {navItems.map((item) => (
          item.children ? (
            <div class="relative group">
              <button class="px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors flex items-center">
                {item.label}
                <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute left-0 mt-0 pt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="bg-white rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 py-2">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors"
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class="px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors"
            >
              {item.label}
            </a>
          )
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden text-gray-700 focus:outline-none p-2 hover:bg-gray-100 rounded-lg transition-colors"
        id="mobile-menu-button"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden lg:hidden mt-4 pb-4 border-t border-gray-100 pt-4" id="mobile-menu">
      {externalLinks.map((link) => (
        <a
          href={link.href}
          target={link.newTab ? "_blank" : undefined}
          rel={link.newTab ? "noopener noreferrer" : undefined}
          class="block py-3 text-blue-600 hover:text-blue-800 font-medium border-b border-gray-100"
        >
          {link.label}
        </a>
      ))}

      {navItems.map((item) => (
        item.children ? (
          <div class="mobile-dropdown">
            <button
              class="w-full flex items-center justify-between py-3 text-gray-700 hover:text-blue-600 font-medium border-b border-gray-100"
              data-dropdown-toggle
            >
              {item.label}
              <svg class="w-4 h-4 transition-transform dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="hidden dropdown-content pl-4 bg-gray-50">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class="block py-2 text-gray-600 hover:text-blue-600 border-b border-gray-100 last:border-b-0"
                >
                  {child.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a
            href={item.href}
            class="block py-3 text-gray-700 hover:text-blue-600 font-medium border-b border-gray-100"
          >
            {item.label}
          </a>
        )
      ))}
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = mobileMenuButton?.querySelector('.menu-icon');
  const closeIcon = mobileMenuButton?.querySelector('.close-icon');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      menuIcon?.classList.toggle('hidden');
      closeIcon?.classList.toggle('hidden');
      mobileMenuButton.setAttribute('aria-expanded', String(!isOpen));
    });
  }

  // Mobile dropdown toggles
  const dropdownToggles = document.querySelectorAll('[data-dropdown-toggle]');
  dropdownToggles.forEach((toggle) => {
    toggle.addEventListener('click', () => {
      const content = toggle.nextElementSibling;
      const arrow = toggle.querySelector('.dropdown-arrow');
      content?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
    });
  });
</script>
