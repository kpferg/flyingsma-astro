---
import site from '../../data/site.json';

const { contact, address, hours, social, footer } = site;
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-xl font-bold mb-4">FBO Desk</h3>
        <div class="space-y-3 text-slate-300">
          <p>
            {contact.fbo.label}:
            <a href={`tel:${contact.fbo.phone}`} class="hover:text-white transition-colors font-semibold">
              {contact.fbo.phone}
            </a>
          </p>
          <p>
            Email:
            <a href={`mailto:${contact.fbo.email}`} class="hover:text-white transition-colors">
              {contact.fbo.email}
            </a>
          </p>
        </div>

        <!-- After Hours -->
        {contact.afterHours && (
          <div class="mt-6 p-4 bg-slate-800 rounded-lg">
            <p class="font-semibold text-white mb-1">After Hours</p>
            <p class="text-slate-300">
              <a href={`tel:${contact.afterHours.phone}`} class="hover:text-white transition-colors">
                {contact.afterHours.phone}
              </a>
            </p>
            <p class="text-slate-400 text-sm">{contact.afterHours.name}</p>
            <p class="text-slate-400 text-xs mt-1">{contact.afterHours.rate}</p>
          </div>
        )}

        <!-- Maintenance -->
        <div class="mt-4">
          <p class="font-semibold text-white mb-1">Maintenance</p>
          <p class="text-slate-300">
            <a href={`mailto:${contact.maintenance.email}`} class="hover:text-white transition-colors">
              {contact.maintenance.email}
            </a>
          </p>
        </div>
      </div>

      <!-- Hours & Location -->
      <div>
        <h3 class="text-xl font-bold mb-4">Hours & Location</h3>
        <div class="space-y-3 text-slate-300">
          <p>Open 7 days a week</p>
          <p>{hours.regular}</p>
          <p class="italic text-sm">{hours.altDisplay}</p>
          <div class="mt-4">
            <p class="font-semibold text-white mb-1">Address</p>
            <p>{address.street1}</p>
            <p>{address.city}, {address.state} {address.zip}</p>
            <a
              href={`https://maps.google.com/?q=${encodeURIComponent(address.full)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-400 hover:text-white mt-2 inline-flex items-center transition-colors"
            >
              Get directions
              <i class="fa-solid fa-arrow-up-right-from-square ml-1"></i>
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links & Social -->
      <div>
        <h3 class="text-xl font-bold mb-4">Quick Links</h3>
        <div class="space-y-2 mb-6">
          <a href="/fbo-services" class="block text-slate-300 hover:text-white transition-colors">All Services</a>
          <a href="/fbo-services/corporate-arrivals" class="block text-slate-300 hover:text-white transition-colors">Corporate Arrivals</a>
          <a href="/fbo-services/maintenance" class="block text-slate-300 hover:text-white transition-colors">Aircraft Maintenance</a>
          <a href="/fbo-services/news" class="block text-slate-300 hover:text-white transition-colors">News</a>
          <a href="/fbo-services/contact" class="block text-slate-300 hover:text-white transition-colors">Contact</a>
        </div>

        <!-- Social Links -->
        <div class="space-y-4">
          <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
          <div class="space-y-4">
            {social.facebook && (
              <div>
              <a
                href={social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-sky-400 hover:text-sky-300 transition-colors"
              >
                <i class="fa-brands fa-facebook text-2xl mr-2"></i>
                Facebook
              </a>
              </div>
            )}
            {social.instagram && (
            <div>
            <a
              href={social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-sky-400 hover:text-sky-300 transition-colors"
            >
              <i class="fa-brands fa-instagram text-2xl mr-2"></i>
              Instagram
            </a>
            </div>
            )}
          </div>
        </div>

        <!-- Switch to Flight School -->
        <div class="mt-6 pt-6 border-t border-slate-800">
          <p class="text-sm text-slate-400 mb-2">Looking for flight training?</p>
          <a href="/flight-school" class="inline-flex items-center text-white hover:text-slate-300 font-medium transition-colors">
            Visit Flight School
            <i class="fa-solid fa-chevron-right ml-1"></i>
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-slate-800 mt-8 pt-8 text-center text-slate-400">
      <p>&copy; Copyright {currentYear} {footer.copyright.name}. All rights reserved.</p>
      <p class="mt-2 text-sm">
        Created by
        <a
          href="http://greenhopperdesign.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#5cb85c] hover:opacity-80 transition-opacity"
        >
          Green Hopper Design
        </a>
      </p>
    </div>
  </div>
</footer>
