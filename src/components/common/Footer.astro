---
import site from '../../data/site.json';

const { contact, address, hours, social, footer } = site;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white mt-auto relative z-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-xl font-bold mb-4">Contact Us</h3>
        <div class="space-y-4 text-gray-300">
          <div>
            <p class="font-semibold text-white mb-1">FBO Inquiries</p>
            <p>
              {contact.fbo.label}:
              <a href={`tel:${contact.fbo.phone}`} class="hover:text-sky-400 transition-colors">
                {contact.fbo.phone}
              </a>
            </p>
            <p>
              Email:
              <a href={`mailto:${contact.fbo.email}`} class="hover:text-sky-400 transition-colors">
                {contact.fbo.email}
              </a>
            </p>
          </div>
          <div>
            <p class="font-semibold text-white mb-1">Flight Training & Questions</p>
            <p>
              {contact.flight.label}:
              <a href={`tel:${contact.flight.phone}`} class="hover:text-sky-400 transition-colors">
                {contact.flight.phone}
              </a>
            </p>
            <p>
              Email:
              <a href={`mailto:${contact.flight.email}`} class="hover:text-sky-400 transition-colors">
                {contact.flight.email}
              </a>
            </p>
          </div>
          <div>
            <p class="font-semibold text-white mb-1">Maintenance</p>
            <p>
              Email:
              <a href={`mailto:${contact.maintenance.email}`} class="hover:text-sky-400 transition-colors">
                {contact.maintenance.email}
              </a>
            </p>
          </div>
        </div>
      </div>

      <!-- Hours & Location -->
      <div>
        <h3 class="text-xl font-bold mb-4">Hours & Location</h3>
        <div class="space-y-3 text-gray-300">
          <p>Open 7 days a week</p>
          <p>{hours.regular}</p>
          <p class="italic text-sm">{hours.altDisplay}</p>
          <div class="mt-4">
            <p class="font-semibold text-white mb-1">Address</p>
            <p>{address.street1}</p>
            {address.street2 && <p>{address.street2}</p>}
            <p>{address.city}, {address.state} {address.zip}</p>
            <a
              href={`https://maps.google.com/?q=${encodeURIComponent(address.full)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-400 hover:text-sky-300 mt-2 inline-flex items-center transition-colors"
            >
              Get directions
              <i class="fa-solid fa-arrow-up-right-from-square ml-1"></i>
            </a>
          </div>
        </div>
      </div>

      <!-- Social & Additional Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
        <div class="space-y-4">
          {social.facebook && (
            <div>
            <a
              href={social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-sky-400 hover:text-sky-300 transition-colors"
            >
              <i class="fa-brands fa-facebook text-2xl mr-2"></i>
              Facebook
            </a>
            </div>
          )}
          {social.instagram && (
          <div>
          <a
            href={social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-sky-400 hover:text-sky-300 transition-colors"
          >
            <i class="fa-brands fa-instagram text-2xl mr-2"></i>
            Instagram
          </a>
          </div>
          )}
        </div>

        <!-- After Hours Contact -->
        {contact.afterHours && (
          <div class="mt-6 p-4 bg-gray-800 rounded-lg">
            <p class="font-semibold text-white mb-1">After Hours Emergency</p>
            <p class="text-gray-300 text-sm">
              <a href={`tel:${contact.afterHours.phone}`} class="hover:text-sky-400 transition-colors">
                {contact.afterHours.phone}
              </a>
            </p>
            <p class="text-gray-400 text-sm">{contact.afterHours.name}</p>
            <p class="text-gray-400 text-xs mt-1">{contact.afterHours.rate}</p>
          </div>
        )}
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; Copyright {currentYear} {footer.copyright.name}. All rights reserved.</p>
      <p class="mt-2 text-sm">
        Created by
        <a
          href="http://greenhopperdesign.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#5cb85c] hover:opacity-80 transition-opacity"
        >
          Green Hopper Design
        </a>
      </p>
    </div>
  </div>
</footer>
