---
import site from '../../data/site.json';
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b-2 border-slate-700">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo & Brand -->
      <a href="/fbo-services" class="flex items-center gap-3">
        <img
          src="/images/logo/SMALogo.png"
          alt="Southern Maine Aviation"
          class="h-10 w-auto"
        />
        <div class="hidden sm:block">
          <span class="text-sm text-gray-500">Southern Maine Aviation</span>
          <span class="block text-lg font-semibold text-slate-700 -mt-1">FBO Services</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        <!-- Primary Links -->
        <a href="/fbo-services" class="px-3 py-2 text-gray-700 hover:text-slate-600 font-medium rounded-md hover:bg-slate-50 transition-colors">
          Services
        </a>
        <a href="/fbo-services/corporate-arrivals" class="px-3 py-2 text-gray-700 hover:text-slate-600 font-medium rounded-md hover:bg-slate-50 transition-colors">
          Corporate Arrivals
        </a>
        <a href="/fbo-services/contact" class="px-3 py-2 text-gray-700 hover:text-slate-600 font-medium rounded-md hover:bg-slate-50 transition-colors">
          Contact
        </a>

        <!-- More Dropdown -->
        <div class="relative group">
          <button class="px-3 py-2 text-gray-700 hover:text-slate-600 font-medium rounded-md hover:bg-slate-50 transition-colors flex items-center gap-1">
            More
            <i class="fa-solid fa-chevron-down text-xs transition-transform group-hover:rotate-180"></i>
          </button>
          <div class="absolute right-0 mt-1 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pt-2">
            <div class="bg-white rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 py-1">
              <a href="/fbo-services/maintenance" class="block px-4 py-2 text-sm text-gray-700 hover:bg-slate-50 hover:text-slate-600">
                Aircraft Maintenance
              </a>
              <a href="/fbo-services/news" class="block px-4 py-2 text-sm text-gray-700 hover:bg-slate-50 hover:text-slate-600">
                News
              </a>
              <div class="border-t border-gray-100 my-1"></div>
              <a href="/flight-school" class="block px-4 py-2 text-sm text-gray-500 hover:bg-gray-50">
                Switch to Flight School →
              </a>
            </div>
          </div>
        </div>

        <!-- Call Button -->
        <a
          href={`tel:${site.contact.fbo.phone}`}
          class="ml-3 px-4 py-2 bg-slate-700 text-white text-sm font-medium rounded-lg hover:bg-slate-800 transition-colors flex items-center gap-2"
        >
          <i class="fa-solid fa-phone"></i>
          <span class="hidden lg:inline">{site.contact.fbo.phone}</span>
          <span class="lg:hidden">Call</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden text-gray-700 p-2 hover:bg-gray-100 rounded-lg transition-colors"
        id="mobile-menu-button-fbo"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <i class="fa-solid fa-bars text-xl menu-icon"></i>
        <i class="fa-solid fa-xmark text-xl close-icon hidden"></i>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden md:hidden pb-4" id="mobile-menu-fbo">
      <div class="pt-4 border-t border-gray-100 space-y-1">
        <a href="/fbo-services" class="block px-3 py-2 text-gray-700 hover:bg-slate-50 hover:text-slate-600 rounded-md font-medium">
          All Services
        </a>
        <a href="/fbo-services/corporate-arrivals" class="block px-3 py-2 text-gray-700 hover:bg-slate-50 hover:text-slate-600 rounded-md font-medium">
          Corporate Arrivals
        </a>
        <a href="/fbo-services/maintenance" class="block px-3 py-2 text-gray-700 hover:bg-slate-50 hover:text-slate-600 rounded-md font-medium">
          Aircraft Maintenance
        </a>
        <a href="/fbo-services/news" class="block px-3 py-2 text-gray-700 hover:bg-slate-50 hover:text-slate-600 rounded-md font-medium">
          News
        </a>
        <a href="/fbo-services/contact" class="block px-3 py-2 text-gray-700 hover:bg-slate-50 hover:text-slate-600 rounded-md font-medium">
          Contact
        </a>

        <div class="pt-3 mt-3 border-t border-gray-100">
          <a
            href={`tel:${site.contact.fbo.phone}`}
            class="flex items-center justify-center gap-2 w-full px-4 py-3 bg-slate-700 text-white font-medium rounded-lg hover:bg-slate-800 transition-colors"
          >
            <i class="fa-solid fa-phone"></i>
            Call: {site.contact.fbo.phone}
          </a>
        </div>

        <div class="pt-3 mt-3 border-t border-gray-100">
          <a href="/flight-school" class="block px-3 py-2 text-gray-500 hover:text-gray-700 text-sm">
            Switch to Flight School →
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button-fbo');
  const mobileMenu = document.getElementById('mobile-menu-fbo');
  const menuIcon = mobileMenuButton?.querySelector('.menu-icon');
  const closeIcon = mobileMenuButton?.querySelector('.close-icon');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      menuIcon?.classList.toggle('hidden');
      closeIcon?.classList.toggle('hidden');
      mobileMenuButton.setAttribute('aria-expanded', String(!isOpen));
    });
  }
</script>
