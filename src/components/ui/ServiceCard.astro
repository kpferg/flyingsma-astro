---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
  variant?: 'default' | 'compact' | 'featured';
}

const { title, description, icon, href, variant = 'default' } = Astro.props;

// Map icon prop to FontAwesome classes
const iconClass = `fa-solid ${icon}`;
---

{variant === 'featured' ? (
  <a
    href={href || '#'}
    class="group block bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2"
  >
    <div class="p-8">
      <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-colors duration-300">
        <i class={`${iconClass} text-2xl text-blue-600 group-hover:text-white transition-colors duration-300`}></i>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
        {title}
      </h3>
      <p class="text-gray-600 leading-relaxed">
        {description}
      </p>
      <div class="mt-6 flex items-center text-blue-600 font-medium">
        Learn More
        <i class="fa-solid fa-chevron-right ml-2 transform group-hover:translate-x-2 transition-transform"></i>
      </div>
    </div>
  </a>
) : variant === 'compact' ? (
  <a
    href={href || '#'}
    class="group flex items-center p-4 bg-white rounded-lg shadow hover:shadow-md transition-all duration-200"
  >
    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-blue-600 transition-colors">
      <i class={`${iconClass} text-xl text-blue-600 group-hover:text-white transition-colors`}></i>
    </div>
    <div class="ml-4">
      <h4 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">{title}</h4>
      <p class="text-sm text-gray-500">{description}</p>
    </div>
  </a>
) : (
  <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
    <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mb-4">
      <i class={`${iconClass} text-xl text-blue-600`}></i>
    </div>
    <h3 class="text-lg font-bold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 text-sm leading-relaxed mb-4">{description}</p>
    {href && (
      <a href={href} class="text-blue-600 hover:text-blue-800 font-medium text-sm inline-flex items-center">
        Learn More
        <i class="fa-solid fa-chevron-right ml-1"></i>
      </a>
    )}
  </div>
)}
