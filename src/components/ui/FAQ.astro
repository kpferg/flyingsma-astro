---
interface FAQItem {
  question: string;
  answer: string;
  category?: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
  description?: string;
  /** Group items by category */
  grouped?: boolean;
  /** Allow multiple items to be open at once */
  allowMultiple?: boolean;
  /** Color variant */
  variant?: 'light' | 'dark';
}

const { items, title, description, grouped = false, allowMultiple = false, variant = 'light' } = Astro.props;

const isDark = variant === 'dark';

// Group items by category if needed
const groupedItems = grouped
  ? items.reduce((acc, item) => {
      const category = item.category || 'General';
      if (!acc[category]) acc[category] = [];
      acc[category].push(item);
      return acc;
    }, {} as Record<string, FAQItem[]>)
  : { '': items };
---

<section class="faq-section" data-allow-multiple={allowMultiple} data-variant={variant}>
  {(title || description) && (
    <div class="text-center mb-10">
      {title && (
        <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${isDark ? 'text-white' : 'text-gray-900'}`}>{title}</h2>
      )}
      {description && (
        <p class={`text-lg max-w-2xl mx-auto ${isDark ? 'text-gray-300' : 'text-gray-600'}`}>{description}</p>
      )}
    </div>
  )}

  <div class="space-y-8">
    {Object.entries(groupedItems).map(([category, categoryItems]) => (
      <div>
        {grouped && category && (
          <h3 class={`text-xl font-semibold mb-4 capitalize ${isDark ? 'text-gray-200' : 'text-gray-800'}`}>
            {category.replace(/-/g, ' ')}
          </h3>
        )}
        <div class="space-y-3">
          {categoryItems.map((item, index) => (
            <div class={`faq-item border rounded-lg overflow-hidden ${isDark ? 'border-gray-600 bg-white/10' : 'border-gray-200 bg-white'}`}>
              <button
                class={`faq-toggle w-full px-6 py-4 text-left flex items-center justify-between transition-colors ${isDark ? 'hover:bg-white/5' : 'hover:bg-gray-50'}`}
                aria-expanded="false"
                data-index={index}
              >
                <span class={`font-medium pr-4 ${isDark ? 'text-white' : 'text-gray-900'}`}>{item.question}</span>
                <svg
                  class={`faq-icon w-5 h-5 flex-shrink-0 transition-transform duration-300 ${isDark ? 'text-gray-400' : 'text-gray-500'}`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="faq-content hidden">
                <div class={`px-6 pt-2 pb-5 leading-relaxed whitespace-pre-line ${isDark ? 'text-gray-300' : 'text-gray-600'}`}>
                  {item.answer}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .faq-item.open .faq-icon {
    transform: rotate(180deg);
  }

  /* Light mode: light gray background when open */
  .faq-section[data-variant="light"] .faq-item.open .faq-toggle {
    background-color: rgb(249 250 251);
  }

  /* Dark mode: slightly lighter background when open */
  .faq-section[data-variant="dark"] .faq-item.open .faq-toggle {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .faq-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .faq-item.open .faq-content {
    max-height: 1000px;
    display: block;
  }
</style>

<script>
  document.querySelectorAll('.faq-section').forEach((section) => {
    const allowMultiple = section.getAttribute('data-allow-multiple') === 'true';
    const toggles = section.querySelectorAll('.faq-toggle');

    toggles.forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const item = toggle.closest('.faq-item');
        const isOpen = item?.classList.contains('open');

        // Close other items if not allowing multiple
        if (!allowMultiple && !isOpen) {
          section.querySelectorAll('.faq-item.open').forEach((openItem) => {
            openItem.classList.remove('open');
            openItem.querySelector('.faq-toggle')?.setAttribute('aria-expanded', 'false');
          });
        }

        // Toggle current item
        item?.classList.toggle('open');
        toggle.setAttribute('aria-expanded', String(!isOpen));
      });
    });
  });
</script>
