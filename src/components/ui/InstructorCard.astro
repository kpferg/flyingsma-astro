---
interface Props {
  name: string;
  availability?: string;
  description: string;
  image: string;
  image2?: string;
  variant?: 'default' | 'compact' | 'detailed';
}

const { name, availability, description, image, image2, variant = 'default' } = Astro.props;

// Handle both Contentful URLs (full URLs) and local paths
const isFullUrl = (url: string) => url.startsWith('http://') || url.startsWith('https://');
const imagePath = isFullUrl(image) ? image : `/images/instructors/${image}`;
const image2Path = image2 ? (isFullUrl(image2) ? image2 : `/images/instructors/${image2}`) : null;
---

{variant === 'detailed' ? (
  <div class="bg-white rounded-xl shadow-lg overflow-hidden group">
    <div class="relative h-64 overflow-hidden">
      <img
        src={imagePath}
        alt={name}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
      {image2Path && (
        <img
          src={image2Path}
          alt={`${name} - alternate`}
          class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          loading="lazy"
        />
      )}
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      <div class="absolute bottom-4 left-4 right-4">
        <h3 class="text-xl font-bold text-white">{name}</h3>
        {availability && (
          <p class="text-sky-300 text-sm">{availability}</p>
        )}
      </div>
    </div>
    <div class="p-6">
      <p class="text-gray-600 leading-relaxed">{description}</p>
    </div>
  </div>
) : variant === 'compact' ? (
  <div class="flex items-start space-x-4 p-4 bg-white rounded-lg shadow hover:shadow-md transition-shadow">
    <div class="relative w-16 h-16 flex-shrink-0 overflow-hidden rounded-full group">
      <img
        src={imagePath}
        alt={name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
    <div class="flex-1 min-w-0">
      <h4 class="font-semibold text-gray-900 truncate">{name}</h4>
      {availability && (
        <p class="text-sm text-sky-600">{availability}</p>
      )}
      <p class="text-sm text-gray-500 mt-1 line-clamp-2">{description}</p>
    </div>
  </div>
) : (
  <div class="bg-white rounded-lg shadow-md overflow-hidden group hover:shadow-xl transition-all duration-300">
    <div class="relative h-48 overflow-hidden">
      <img
        src={imagePath}
        alt={name}
        class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      {image2Path && (
        <img
          src={image2Path}
          alt={`${name} - alternate`}
          class="absolute inset-0 w-full h-full object-cover object-top opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          loading="lazy"
        />
      )}
    </div>
    <div class="p-5">
      <h3 class="text-lg font-bold text-gray-900 mb-1">{name}</h3>
      {availability && (
        <p class="text-sm text-sky-600 mb-3">{availability}</p>
      )}
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-4">{description}</p>
    </div>
  </div>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
